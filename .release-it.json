{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
	"releaseName": "${name} ${version}" 
  },
  "plugins": {
  "@release-it/conventional-changelog": {
    "preset": "conventionalcommits",
    "infile": "CHANGELOG.md"
  },
   "hooks": {
    "after:git:release": "git push origin HEAD"
  }
}
}
